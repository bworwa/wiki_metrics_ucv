<?xml version="1.0" encoding="UTF-8" ?>
<scraper>
	<general>
		<user_agent>wiki_metrics_ucv/0.01</user_agent>
	</general>
	<xpath>
		<queries hosts="es.wikipedia.org, en.wikipedia.org">
			<query name="history" context="none">//ul[@id="pagehistory"]</query>
			<query name="revisions" context="history">/ul/li</query>
			<query name="mediawiki_id" context="revisions">/li/a[1]</query>
			<query name="user" context="revisions">/li/span[@class="history-user"]/a[1]</query>
			<query name="minor" context="revisions">/li/abbr[@class="minoredit"]</query>
			<query name="size" context="revisions">/li/span[@class="history-size"]</query>
			<query name="comment" context="revisions">/li/span[@class="comment"]</query>
		</queries>
	</xpath>
</scraper>
